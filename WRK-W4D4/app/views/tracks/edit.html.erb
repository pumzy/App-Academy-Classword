<h1>Edit <%= @track.name %></h1>



<form class="" action="<%= track_url(@track) %>" method="post">
  <input type="hidden" name="_method" value="patch">

  <h3>Change Name</h3>
  <input type="text" name="track[name]" value="<%= @track.name %>">

  <h3>Change Album this track is listed under</h3>
  <select name = "track[album_id]" >
  <% @albums.each do |album| %>
   <option value= "<%= album %>" <%=  album.tracks.include?(@track) ? "selected" : ""  %>  > <%= album.name %> </option>
  <% end %>
  </select>

  <h3>Change the edition of the track</h3>
  <input type="radio" name="track[bonus]" value="Bonus" <%= @track.bonus == "Bonus" ? "checked": "" %>  > Bonus <br>
  <input type="radio" name="track[bonus]" value="Regular"   <%= @track.bonus == "Regular" ? "checked": "" %>  > Regular <br>

  <br>
  <input type="submit">


</form>
